$(document).ready(function() {
 
    $("#home-banners").owlCarousel({
        items: 3,
        singleItem : false,
        autoPlay : true
    });
    
    $(".slideshow").owlCarousel({
        singleItem : true,
        autoPlay : true,
        pagination: false,
        navigation: true,
        navigationText: ["<i class=\"fa fa-chevron-left\"></i>","<i class=\"fa fa-chevron-right\"></i>"]
    });
    
    $("#home-events").owlCarousel({
        items: 5,
        singleItem : false,
        autoPlay : true,
        pagination: false,
        navigation: true,
        navigationText: ["<i class=\"fa fa-chevron-left\"></i>","<i class=\"fa fa-chevron-right\"></i>"]
    });
 
});